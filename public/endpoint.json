{
    "name": "exact_target",
    "display": "ExactTarget",
    "description": "ExactTarget",
    "help": "http://guides.spreecommerce.com/integration/exact_target_integration.html",
    "icon_url": "exact_target.png",
    "services": [
        {
            "name": "send_email",
            "path": "/send_email",
            "description": "Sends Email",
            "requires": {
                "parameters": [
                    {
                        "name": "username",
                        "description": "ExactTarget Username",
                        "data_type": "string",
                        "optional": false
                    },
                    {
                        "name": "password",
                        "description": "ExactTarget Password",
                        "data_type": "password",
                        "optional": false
                    },
                    {
                        "name": "api_url",
                        "description": "ExactTarget API URL",
                        "data_type": "string",
                        "optional": true
                    }            
                ]
            },
            "recommends": {
                "messages": ["email:send"]
            },
            "produces": {}
        }
    ]
}
